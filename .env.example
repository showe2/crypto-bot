# ==============================================
# BASIC ENVIRONMENT SETTINGS
# ==============================================

# Environment type
ENV=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# ==============================================
# API KEYS FOR BLOCKCHAIN DATA
# ==============================================

# QuickNode RPC
QUICKNODE_RPC=https://your-endpoint.quiknode.pro/your-key/
QUICKNODE_WSS=wss://your-endpoint.quiknode.pro/your-key/

# Helius - main Solana RPC provider
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=https://rpc.helius.xyz/?api-key=
HELIUS_BASE_URL=https://mainnet.helius-rpc.com

# Birdeye - price data and volumes
BIRDEYE_API_KEY=your_birdeye_api_key_here
BIRDEYE_BASE_URL=https://public-api.birdeye.so

# Blowfish - token security checks
BLOWFISH_API_KEY=your_blowfish_api_key_here
BLOWFISH_BASE_URL=https://api.blowfish.xyz

# SolanaFM - on-chain data and analytics (replaces Solscan)
SOLANAFM_BASE_URL=https://api.solana.fm

# DexScreener - DEX data and analytics
DEXSREENER_BASE_URL=https://api.dexscreener.com

# PumpFun API
PUMPFUN_API_KEY=your_pumpfun_key_here

# RugCheck API
RUGCHECK_BASE_URL=https://api.rugcheck.xyz

# GOplus API
GOPLUS_APP_KEY=your_goplus_app_key_here
GOPLUS_APP_SECRET=your_goplus_app_secret_here
GOPLUS_BASE_URL=https://api.gopluslabs.io

# ==============================================
# WEBHOOKS
# ==============================================

# QuickNode WebHooks
QUICKNODE_WEBHOOK_SECRET=your_quicknode_webhook_secret
QUICKNODE_WEBHOOK_URL=https://your-domain.com/webhooks/quicknode

# WebHook Base URL
WEBHOOK_BASE_URL=https://your-functions-url.quicknode-functions.com

# ==============================================
# STORAGE AND CACHING
# ==============================================

# ChromaDB - vector storage
CHROMA_DB_PATH=./shared_data/chroma
CHROMA_COLLECTION_NAME=solana_tokens_knowledge

# Knowledge Base
KNOWLEDGE_BASE_PATH=./shared_data/knowledge_base
LOGS_DIR=.//shared_data/logs

# Redis - caching and queues
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# CELERY - BACKGROUND TASKS
# ==============================================

CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ==============================================
# TRADING APIS (FUTURE PREPARATION)
# ==============================================

# Jupiter - DEX aggregator (not currently used)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# ==============================================
# NOTIFICATIONS
# ==============================================

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==============================================
# SECURITY
# ==============================================

# JWT Secret
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Wallet Secret Key (for transaction signing)
WALLET_SECRET_KEY=your_wallet_private_key_here

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# PERFORMANCE
# ==============================================

# API request timeouts (seconds)
API_TIMEOUT=30
AI_TIMEOUT=60
WEBHOOK_TIMEOUT=5

# Connection pool size
HTTP_POOL_SIZE=100
HTTP_MAX_RETRIES=3

# Caching
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes  
CACHE_TTL_LONG=7200      # 2 hours

# ==============================================
# MONITORING AND LOGGING
# ==============================================

# Logging level
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (optional)
SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# DEVELOPMENT AND TESTING
# ==============================================

# Test tokens for development
TEST_TOKEN_MINT=So11111111111111111111111111111111111112
TEST_SOCIAL_DATA_FILE=test_social_data.json

# Mocks for testing
ENABLE_API_MOCKS=false
MOCK_AI_RESPONSES=false