# ==============================================
# ОСНОВНЫЕ НАСТРОЙКИ ОКРУЖЕНИЯ
# ==============================================

# Environment type
ENV=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# ==============================================
# API КЛЮЧИ ДЛЯ BLOCKCHAIN ДАННЫХ
# ==============================================

# QuickNode RPC
QUICKNODE_RPC=https://your-endpoint.quiknode.pro/your-key/
QUICKNODE_WSS=wss://your-endpoint.quiknode.pro/your-key/

# Helius - основной RPC провайдер Solana
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=https://rpc.helius.xyz/?api-key=

# Chainbase - анализ смарт-контрактов и holders
CHAINBASE_API_KEY=your_chainbase_api_key_here
CHAINBASE_BASE_URL=https://api.chainbase.online/v1

# Birdeye - ценовые данные и объемы
BIRDEYE_API_KEY=your_birdeye_api_key_here
BIRDEYE_BASE_URL=https://public-api.birdeye.so

# Blowfish - проверка безопасности токенов
BLOWFISH_API_KEY=your_blowfish_api_key_here
BLOWFISH_BASE_URL=https://api.blowfish.xyz

# Solscan - дополнительные on-chain данные
SOLSCAN_API_KEY=your_solscan_api_key_here
SOLSCAN_BASE_URL=https://public-api.solscan.io

# PumpFun API
PUMPFUN_API_KEY=your_pumpfun_key_here

# RugCheck API
RUGCHECK_API_KEY=your_rugcheck_key_here

# ==============================================
# СОЦИАЛЬНЫЕ СЕТИ И АНАЛИТИКА
# ==============================================

# DataImpulse - парсинг социальных сетей
DATAIMPULSE_API_KEY=your_dataimpulse_api_key_here
DATAIMPULSE_BASE_URL=https://api.dataimpulse.com

# ==============================================
# WEBHOOKS
# ==============================================

# QuickNode WebHooks
QUICKNODE_WEBHOOK_SECRET=your_quicknode_webhook_secret
QUICKNODE_WEBHOOK_URL=https://your-domain.com/webhooks/quicknode

# Helius WebHook
HELIUS_WEBHOOK_SECRET=your_webhook_secret

# WebHook Base URL
WEBHOOK_BASE_URL=https://your-functions-url.quicknode-functions.com

# ==============================================
# ХРАНИЛИЩЕ И КЕШИРОВАНИЕ
# ==============================================

# ChromaDB - векторное хранилище
CHROMA_DB_PATH=/opt/crypto_ai_project/shared_data/chroma
CHROMA_COLLECTION_NAME=solana_tokens_knowledge

# Knowledge Base
KNOWLEDGE_BASE_PATH=/opt/crypto_ai_project/shared_data/knowledge_base
LOGS_DIR=/opt/crypto_ai_project/shared_data/logs

# Redis - кеширование и очереди
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# CELERY - ФОНОВЫЕ ЗАДАЧИ
# ==============================================

CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ==============================================
# AI МОДЕЛИ
# ==============================================

# Mistral 7B - быстрый пре-анализ
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-7b-instruct

# LLaMA 3 70B - глубокий анализ
LLAMA_API_KEY=your_llama_api_key_here
LLAMA_API_URL=https://api.together.xyz/v1
LLAMA_MODEL=meta-llama/Llama-3-70b-chat-hf

# ==============================================
# ТОРГОВЫЕ API (ПОДГОТОВКА К БУДУЩЕМУ)
# ==============================================

# Jupiter - DEX агрегатор (пока не используется)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# ==============================================
# УВЕДОМЛЕНИЯ
# ==============================================

# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==============================================
# БЕЗОПАСНОСТЬ
# ==============================================

# JWT Secret
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# ==============================================

# Таймауты API запросов (секунды)
API_TIMEOUT=30
AI_TIMEOUT=60
WEBHOOK_TIMEOUT=5

# Размер пула соединений
HTTP_POOL_SIZE=100
HTTP_MAX_RETRIES=3

# Кеширование
CACHE_TTL_SHORT=300      # 5 минут
CACHE_TTL_MEDIUM=1800    # 30 минут  
CACHE_TTL_LONG=7200      # 2 часа

# ==============================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ
# ==============================================

# Уровень логирования
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (опционально)
SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# РАЗРАБОТКА И ТЕСТИРОВАНИЕ
# ==============================================

# Тестовые токены для разработки
TEST_TOKEN_MINT=So11111111111111111111111111111111111112
TEST_SOCIAL_DATA_FILE=test_social_data.json

# Моки для тестирования
ENABLE_API_MOCKS=false
MOCK_AI_RESPONSES=false
